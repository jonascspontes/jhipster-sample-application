    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <!--
        Added the constraints for entity Plataforma.
    -->
    <changeSet id="20190628202858-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="plataforma_id"
                                 baseTableName="plataforma_game"
                                 constraintName="fk_plataforma_game_plataforma_id"
